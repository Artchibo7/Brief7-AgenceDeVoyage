{% extends 'base.html.twig' %}

{% block title %}Art & Voyage{% endblock %}

{% block body %}
    <h1>Les destinations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomPays</th>
                <th>NomVille</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for destination in destinations %}
            <tr>
                <td>{{ destination.id }}</td>
                <td>{{ destination.NomPays }}</td>
                <td>{{ destination.NomVille }}</td>
                <td>{{ destination.image }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('app_destination_show', {'id': destination.id}) }}">voir</a>
                    <a class="btn btn-success" href="{{ path('app_destination_edit', {'id': destination.id}) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Vous avez encore rien ajouté</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('app_destination_new') }}">Créer une nouvelle</a>
{% endblock %}
